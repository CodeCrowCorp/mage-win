<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="MageWin.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MageWin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <AppBar x:Name="TopAppBar" Closing="AppBar_Closing">
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="ChannelButton"
                    Width="200"
                    Height="70"
                    Background="Transparent"
                    Click="OpenChannel_Click"
                    Content="Enter channel id" />

            </StackPanel>
        </AppBar>
        <Popup
            x:Name="ChannlePopUp"
            Grid.Row="1"
            Width="200"
            Height="200"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsOpen="False">
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Left" />
                </TransitionCollection>
            </Popup.ChildTransitions>
            <Grid
                Width="200"
                Height="200"
                CornerRadius="5"
                RowSpacing="0">
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBox
                        x:Name="ChannelText"
                        Width="200"
                        Header="Enter channel id:"
                        PlaceholderText="Channel id" />
                    <Button
                        Width="200"
                        Height="50"
                        Background="CadetBlue"
                        Click="Channel_Click"
                        Content="Submit" />
                </StackPanel>
            </Grid>
        </Popup>

    </Grid>

</Window>
